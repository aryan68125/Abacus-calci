<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aditya.scientificcalculator">

    <application
        android:allowBackup="true"
        android:icon="@drawable/cal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScientificCalculator">
        <activity android:name=".Base_conversion"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".UnitConverterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DevActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForceActivity"
            android:parentActivityName=".UnitConverterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PowerActivity"
            android:parentActivityName=".UnitConverterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WeightActivity"
            android:parentActivityName=".UnitConverterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LengthActivity"
            android:parentActivityName=".UnitConverterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TemperatureConverter"
            android:parentActivityName=".UnitConverterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UnitConverterActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TimesTableActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quadActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>