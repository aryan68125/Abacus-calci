<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aditya.scientificcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScientificCalculator">
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DevActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".ForceActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".UnitConverterActivity"/>
        <activity
            android:name=".PowerActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".UnitConverterActivity"/>
        <activity
            android:name=".WeightActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".UnitConverterActivity"/>
        <activity
            android:name=".LengthActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".UnitConverterActivity"/>
        <activity
            android:name=".TemperatureConverter"
            android:screenOrientation="portrait"
            android:parentActivityName=".UnitConverterActivity"/>
        <activity
            android:name=".UnitConverterActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".TimesTableActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".quadActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>